<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main2" tools:context="com.atifniyaz.wernkewheel.Main2Activity"
    android:background="#000">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#000">

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="$10"
            android:id="@+id/tenLeft"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:background="#187800"
            android:layout_margin="2dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="$5"
            android:id="@+id/fiveLeft"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:background="#bda700"
            android:layout_margin="2dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="$2"
            android:id="@+id/twoLeft"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:background="#8c0404"
            android:layout_margin="2dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="$2"
            android:id="@+id/twoRight"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:background="#343434"
            android:layout_margin="2dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="$5"
            android:id="@+id/fiveRight"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:background="#080d7f"
            android:layout_margin="2dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="$10"
            android:id="@+id/tenRight"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:background="#b44200"
            android:layout_margin="2dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2"
        android:background="#000">

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="$1"
            android:id="@+id/oneBottom"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#FF0000"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="2dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:background="#000">

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="$1"
            android:id="@+id/oneLeft"
            android:layout_weight="1"
            android:background="#FF0000"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="2dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="$50"
            android:id="@+id/fiftyleft"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:background="#fd00e18b"
            android:layout_margin="2dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="$50"
            android:id="@+id/fiftyright"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:background="#fd00e18b"
            android:layout_margin="2dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="$1"
            android:id="@+id/oneRight"
            android:layout_weight="1"
            android:background="#FF0000"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="2dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="n = "
        android:id="@+id/n"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textColor="#FFF"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mean = "
        android:id="@+id/mean"
        android:textSize="30dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_below="@+id/n"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sd = "
        android:id="@+id/sd"
        android:textSize="30dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_below="@+id/mean"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALL DATA"
        android:id="@+id/allData"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#FFF"
        android:layout_margin="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="total = "
        android:id="@+id/total"
        android:textSize="30dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_below="@+id/sd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/reset"
        android:background="#FFF"
        android:layout_below="@+id/allData"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignLeft="@+id/allData"
        android:layout_alignStart="@+id/allData" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0 "
        android:id="@+id/zero"
        android:background="#FFF"
        android:layout_below="@+id/reset"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_alignLeft="@+id/reset"
        android:layout_alignStart="@+id/reset"
        android:layout_alignRight="@+id/reset"
        android:layout_alignEnd="@+id/reset" />

</RelativeLayout>
